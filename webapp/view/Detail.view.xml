<mvc:View
	controllerName="br.com.app.mockserver.sapui5appmockserver.controller.Detail"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	height="100%">
	<ObjectHeader 
		id="objectHeader" 
		responsive="true"
		fullScreenOptimized="true"
		intro="{Description}"
		title="{Title}"
		class="sapUiResponsivePadding--header"
		backgroundDesign="Translucent">
			<ObjectAttribute
				id="objectAttribute"
				title="Telefone" 
				text="{ContactPhone}" />
			<headerContainer>
				<IconTabBar
					id="itb1"
					selectedKey="key3"
					upperCase="true"
					class="sapUiResponsivePadding--content">
					<items>
					<IconTabFilter
						id="iconTabFilter"
						text="Info"
						count="{MeetupID}"
						key="key1">
							<l:VerticalLayout
								id="verticalLayout"
								class="sapUiContentPadding"
								width="100%">
								<l:content>
									<Text id="text" text="{Latitude} x {Longitude}"/>
								</l:content>
							</l:VerticalLayout>
					</IconTabFilter>
					<IconTabFilter
						id="iconTabFilter1"
						text="Activities"
						count="10"
						key="key2">
							<l:VerticalLayout
								id="verticalLayout1"
								class="sapUiContentPadding"
								width="100%">
								<l:content>
									<Text
										id="text1" 
										text="Activity content goes here ..."/>
								</l:content>
							</l:VerticalLayout>
					</IconTabFilter>
					<IconTabFilter
						id="iconTabFilter2"
						text="Attachments"
						count="1"
						key="key3">
						<Button 
							id="link"
							text="Attachment" 
							press="onPress"/>
					</IconTabFilter>
					<IconTabFilter
						id="iconTabFilter3"
						text="PartnerInfo"
						key="key4"
						count="1">
							<Link
								id="link1"
								text="Partner SAP SE"
								target="_blank"
								href="http://www.sap.com/"/>
					</IconTabFilter>
					</items>
				</IconTabBar>
			</headerContainer>
	</ObjectHeader>
</mvc:View>